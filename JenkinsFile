pipeline {
    agent any

    stages {

          stage('Ansible Init') {
            steps {
                script {

               def tfHome = tool name: 'Ansible'
                env.PATH = "${tfHome}:${env.PATH}"
                 sh 'ansible --version'

            }
            }
        }



        stage('Ansible Build') {

            steps {



               sh "ansible-playbook main.yml -i inventories/dev/hosts --user jenkins --key-file /var/lib/jenkins/.ssh/id_rsa"

}
}
}
}